<ul>
  <li class="flex flex-wrap border-b border-gray-200 mt-4 mb-1">
    <div class="w-full sm:w-1/2 md:w-2/3 px-4 py-2">
      <h3 class="font-medium text-base">
        Access requests pending your approval
      </h3>
    </div>
  </li>
  <% @requests.each do |request| %>
    <li class="flex flex-wrap border-b border-gray-200 py-1">
      <div class="w-full sm:w-1/2 md:w-1/3 px-4 mt-1">
          <p class="text-xs text-gray-500 truncate">
            <%= request.role.name %>
          </p>
      </div>

      <div class="w-full sm:w-1/2 md:w-1/3 px-4 mt-1">
          <p class="text-xs text-gray-500 truncate">
            Requested for
          </p>
          <p class="text-xs font-medium text-gray-900 truncate">
            <%= request.user.displayname %>
          </p>
      </div>

      <div class="w-full sm:w-1/2 md:w-1/4 px-4 mt-1">
          <p class="text-xs text-gray-500 break-words">
            <%= request.justification %>
          </p>
      </div>

      <div class="w-full sm:w-1/2 md:w-1/4 mt-1">
        <div class="flex items-center text-white font-medium text-xs justify-end">
          <%= button_to "Approve", approve_access_path(request), method: :post, data: { turbo: false },  
                      class: "text-xs font-medium text-center text-white bg-green-600 rounded-sm hover:bg-green-700 w-20 h-6 px-3 py-1 mr-2" %>
          <%= link_to "Decline", comment_access_path(request), data: { controller: 'turbo' },  
                      class: "text-xs font-medium text-center text-white bg-red-600 rounded-sm hover:bg-red-700 w-20 h-6 px-3 py-1 mr-2" %>
        </div>
      </div>
    </li>
  <% end %>
</ul>