<tr class="border-b border-gray-200 hover:bg-gray-50">
  <td class="py-2 px-3 text-left">
    <%= link_to approval_workflow.name, approval_workflow_path(approval_workflow), data: { turbo_frame: :main } %>
  </td>
  <td class="py-2 px-3 text-left">
    <div class="text-xs">
      Required: <%= approval_workflow.required_primary_approvals %><br>
      Approvers: <%= approval_workflow.primary_approvers.map(&:username).join(', ') %>
    </div>
  </td>
  <td class="py-2 px-3 text-left">
    <div class="text-xs">
      Required: <%= approval_workflow.required_secondary_approvals %><br>
      Approvers: <%= approval_workflow.secondary_approvers.map(&:username).join(', ') %>
    </div>
  </td>

  <td class="px-3 text-left">
  <div class="text-xs font-semibold text-gray-600 break-words justify-end flex items-center">
      <%= link_to "Edit", edit_approval_workflow_path(approval_workflow), data: { turbo: false },
                  class: "text-xs font-medium text-center text-white bg-green-600 rounded-sm hover:bg-green-700 w-20 h-6 px-3 py-1 mr-2" %>
       <%= button_to 'Delete', approval_workflow_path(approval_workflow), method: :delete, data: { turbo: false },  
                    class: "text-xs font-medium text-center text-white bg-red-600 rounded-sm hover:bg-red-700 w-20 h-6 px-3 py-1 mr-2" %>
  </div>
</td>

</tr> 