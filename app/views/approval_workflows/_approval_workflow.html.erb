<tr class="border-b border-gray-200 hover:bg-gray-100">
  <td class="px-6 py-2 whitespace-nowrap text-sm text-gray-500 text-left">
  <p class="text-xs font-semibold text-gray-600 break-words"><%= link_to approval_workflow.name, approval_workflow_path(approval_workflow), data: { turbo: false } %> </p>
  </td>
  <td class="px-6 py-2 whitespace-nowrap text-sm text-gray-500 text-left">
    <div class="text-xs">
      Required: <%= approval_workflow.required_primary_approvals %><br>
      Approvers: <%= approval_workflow.primary_approvers.map(&:username).join(', ') %>
    </div>
  </td>
  <td class="py-2 px-3 text-left">
    <div class="text-xs">
      Required: <%= approval_workflow.required_secondary_approvals %><br>
      Approvers: <%= approval_workflow.secondary_approvers.map(&:username).join(', ') %>
    </div>
  </td>
</tr> 