<tr class="border-b border-gray-200 hover:bg-gray-50">
  <td class="py-2 px-3 text-left">
    <%= link_to approver_set.name, approver_set_path(approver_set), data: { turbo_frame: :main } %>
  </td>
  <td class="py-2 px-3 text-left">
    <div class="text-xs">
      Required: <%= approver_set.required_primary_approvals %><br>
      Approvers: <%= approver_set.primary_approvers.map(&:username).join(', ') %>
    </div>
  </td>
  <td class="py-2 px-3 text-left">
    <div class="text-xs">
      Required: <%= approver_set.required_secondary_approvals %><br>
      Approvers: <%= approver_set.secondary_approvers.map(&:username).join(', ') %>
    </div>
  </td>

  <td class="px-3 text-left">
  <div class="text-xs font-semibold text-gray-600 break-words justify-end flex items-center">
      <%= link_to "Edit", edit_approver_set_path(approver_set), data: { turbo: false },
                  class: "text-xs font-medium text-center text-white bg-green-600 rounded-sm hover:bg-green-700 w-20 h-6 px-3 py-1 mr-2" %>
       <%= button_to 'Delete', approver_set_path(approver_set), method: :delete, data: { turbo: false },  
                    class: "text-xs font-medium text-center text-white bg-red-600 rounded-sm hover:bg-red-700 w-20 h-6 px-3 py-1 mr-2" %>
  </div>
</td>

</tr> 