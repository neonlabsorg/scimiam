<div class="container px-5 py-1 mx-auto text-sm">
  <div class="flex flex-col sm:flex-row justify-between items-center p-2">
    <h1 class="text-lg font-semibold text-gray-700 mb-4 sm:mb-0">GitHub Connections</h1>
    <%= link_to new_github_connection_path, class: "px-3 py-1 text-xs font-medium text-center text-white bg-blue-500 hover:bg-blue-600 rounded-sm transition-colors duration-150" do %>
      Add Connection
    <% end %>
  </div>

  <div class="hidden sm:block">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr class="bg-gray-50 text-gray text-sm leading-3">
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Organization</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @github_connections.each do |connection| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to connection.name, 
                    github_connection_path(connection), 
                    class: "text-gray-600 hover:text-gray-800 font-medium",
                    data: { turbo: false } %>
              </td>
              <td class="px-6 py-3 text-xs font-medium text-gray-500 uppercase tracking-wider"><%= connection.organization %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= connection.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= connection.active? ? 'Active' : 'Inactive' %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>