<div class="container px-5 py-1 mx-auto text-sm">

  <div class="p-1 flex flex-ow scrollbar-hide border-b border-gray-200">
    <div class="basis-1/2 font-medium text-base text-gray-700">
      GitHub Connection details
    </div>
    <div class="basis-1/2 justify-end flex">
        <%= button_to "Delete", @github_connection, method: :delete, data: { turbo: false }, 
                    class: "px-3 py-1 text-xs font-medium text-center text-white bg-red-500 hover:bg-red-600 rounded-sm transition-colors duration-150 mr-1 w-20 h-6" %>
        <%= button_to "Edit", edit_github_connection_path, method: :get, data: { turbo: false }, 
                    class: "px-3 py-1 text-xs font-medium text-center text-white bg-blue-500 hover:bg-blue-600 rounded-sm transition-colors duration-150 w-20 h-6" %>
    </div>
  </div>

  <div class="w-full md:w-12/12">
    <div class="grid md:grid-cols-1 text-xs">
      <div class="grid grid-cols-3">
        <div class="px-4 py-2 font-semibold col-span-1">Name</div>
        <div class="px-4 py-2 col-span-2"><%= @github_connection.name %></div>

        <div class="px-4 py-2 font-semibold col-span-1">Organization</div>
        <div class="px-4 py-2 col-span-2"><%= @github_connection.organization %></div>

        <div class="px-4 py-2 font-semibold col-span-1">Status</div>
        <div class="px-4 py-2 col-span-2">
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= @github_connection.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
            <%= @github_connection.active? ? 'Active' : 'Inactive' %>
          </span>
        </div>

        <div class="px-4 py-2 font-semibold col-span-1">Access Token</div>
        <div class="px-4 py-2 col-span-2"><%= @github_connection.access_token %></div>
      </div>
    </div>
  </div>
</div> 