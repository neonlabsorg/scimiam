<%= turbo_stream.append :roles do %>
  <% @roles.each do |role| %>
    <%= render "role", role: role %>
  <% end %>
<% end %>

<% if @pagy.next.present? %>
  <%= turbo_stream.replace :pagination do %>
    <%= turbo_frame_tag :pagination, 
                        loading: :lazy,
                        src: roles_path(format: :turbo_stream, page: @pagy.next, q: params[:q]&.to_unsafe_h) %>
  <% end %>
<% end %>