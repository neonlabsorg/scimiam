<div class="space-y-6">
  <%= form_with(model: workspace_connection, class: "bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6") do |form| %>
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Connection Details</h3>
        <p class="mt-1 text-sm text-gray-500">
          Configure your Google Workspace connection settings.
        </p>
      </div>

      <div class="mt-5 md:mt-0 md:col-span-2 space-y-6">
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :domain, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :domain, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :admin_email, class: "block text-sm font-medium text-gray-700" %>
          <%= form.email_field :admin_email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= form.label :credentials, "Service Account Credentials (JSON)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :credentials, rows: 10, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm font-mono" %>
        </div>

        <div>
          <%= form.label :active, class: "flex items-center" do %>
            <%= form.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <span class="ml-2 text-sm text-gray-700">Active</span>
          <% end %>
        </div>

        <div>
          <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    </div>
  <% end %>
</div> 