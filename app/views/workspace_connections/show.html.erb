<div class="container px-5 py-1 mx-auto text-sm">

  <div class="p-1 flex flex-ow scrollbar-hide border-b border-gray-200">
    <div class="basis-1/2 font-medium text-base text-gray-700">
      Workspace Connection details
    </div>
    <div class="basis-1/2 justify-end flex">
        <%= button_to "Delete", @workspace_connection, method: :delete, data: { turbo: false }, 
                    class: "px-3 py-1 text-xs font-medium text-center text-white bg-red-500 hover:bg-red-600 rounded-sm transition-colors duration-150 mr-1 w-20 h-6" %>
        <%= button_to "Edit", edit_workspace_connection_path, method: :get, data: { turbo: false }, 
                    class: "px-3 py-1 text-xs font-medium text-center text-white bg-blue-500 hover:bg-blue-600 rounded-sm transition-colors duration-150 w-20 h-6" %>
    </div>
  </div>

  <div class="w-full md:w-12/12">
    <div class="grid md:grid-cols-1 text-xs">
      <div class="grid grid-cols-3">
        <div class="px-4 py-2 font-semibold col-span-1">Name</div>
        <div class="px-4 py-2 col-span-2"><%= @workspace_connection.name %></div>

        <div class="px-4 py-2 font-semibold col-span-1">Domain</div>
        <div class="px-4 py-2 col-span-2"><%= @workspace_connection.domain %></div>

        <div class="px-4 py-2 font-semibold col-span-1">Admin Email</div>
        <div class="px-4 py-2 col-span-2"><%= @workspace_connection.admin_email %></div>

        <div class="px-4 py-2 font-semibold col-span-1">Status</div>
        <div class="px-4 py-2 col-span-2">
          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= @workspace_connection.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
            <%= @workspace_connection.active? ? 'Active' : 'Inactive' %>
          </span>
        </div>

        <div class="px-4 py-2 font-semibold col-span-1">Credentials</div>
        <div class="px-4 py-2 col-span-2">
          <div class="bg-gray-50 rounded-md p-4 overflow-x-auto">
            <pre class="text-xs font-mono whitespace-pre text-gray-700"><%= JSON.pretty_generate(JSON.parse(@workspace_connection.credentials)) rescue @workspace_connection.credentials %></pre>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 