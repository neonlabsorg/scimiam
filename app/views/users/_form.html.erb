<h1 class="text-xl text-center text-gray-600">Update user properties</h1>

<div class="px-3 py-5">
<%= form_with model: @user, url: user_path, method: :patch, data: { turbo: true }, html: { multipart: true } do |form| %>

  <div class="md:flex mt-3 px-4 w-full">
    <div class="md:w-1/3 w-full">
      <%= form.label :github_username, "GitHub username", class: "block text-gray-600 uppercase text-xs font-semibold mb-2 w-full" %>
    </div>
    <div class="md:w-2/3 w-full">
      <%= form.text_field :github_username, 
          class: "border-1 py-0.5 border-gray-200 font-light rounded focus:ring-1 w-full",
          placeholder: "github login" %>
    </div>
  </div>

  <hr class="w-full border-gray-300 border-1 mt-3 mb-5">

  <div class="flex flex-wrap">
    <div class="w-full lg:w-12/12 px-4 py-3">
      <div class="flex justify-end">
        <div class="flex flex-col lg:flex-row lg:items-center">
          <%= form.submit "Submit", class: "px-3 py-1 text-xs font-medium text-center text-white bg-blue-700 rounded-sm hover:bg-blue-800 w-20 h-6" %>
        </div>
      </div>
    </div>
  </div>

<% end %>
</div>

